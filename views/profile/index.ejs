<div class="profile-container">
  <h1 class="title"><%= currentUser.name %>'s </h1>

  <div id="navbar"></div>
    <ul>
      <li><a href="/">Home</a></li>
      <!-- <li><a href="#">Characters</a></li> -->
      <% if (!currentUser) {%>
        <li><a href="/auth/signup">Signup</a></li>
        <li><a href="/auth/login">Login</a></li>
    <% } else { %>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/auth/logout">Logout</a></li>
      <li><a href="/profile/edit">Edit Profile</a></li>
    <% } %>
    </ul>
  </div>

  <div class="list-container">
    <h2 id="watchlistTitle">Watchlist</h2>
    <% animes.forEach(a => { %>
       <div class="card-container">
        <div class="card" style="width: 15rem;">
          <img class="card-img-top" src=<%= a.image_url %> alt="Anime Image" style="max-width: 300px;">
          <div class="card-body">
            <a href="/profile/<%= a.id %> " class="card-title">"<em><%= a.title %></em>" </a>
            <p>Total Episodes: <%= a.episodes %> </p>
            <br>
            <form method="POST" action="/profile/<%= a.id %>/?_method=DELETE">
              <button type="submit" id="delete-btn">Remove</button>
            </form>
            <h2>Comments:</h2>
            <div class="well">
              <form method="POST" action="./profile/<%= a.id%>">
                  <input name="content" type="text" placeholder="Comment">
                  <button class="btn btn-primary" type="submit">Create comment</button>
              </form>
            </div>
            <div class="row">
              <div class="well">
                <% if(Array.isArray(a.comments) && a.comments.length > 0) { %>
                  <% a.comments.forEach((comment) => { %>
                    <div class="panel panel-info">
                      <div class="panel-body">
                        <%= comment.content %>
                      </div>
                      <div class="panel-footer">
                        <b>posted at:</b> <%= comment.updatedAt %>
                      </div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <div class="panel panel-default">
                    <div class="panel-body">
                      No Comments...
                    </div>
                  </div>
                <% } %>
              </div>
            </div> 
          </div>
        </div>
      </div>
    <% }) %>  
  </div>
</div>